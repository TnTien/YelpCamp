<% layout('layouts/boilerplate') %>
    <h1 class="text-center">Are you sure you want to delete this campground?</h1>
    <div class="row mt-4">
        <div class="col-6 offset-3">
          <div class="card mb-3">
            <img src="<%= campground.image %>" class="card-img-top" alt="<%= campground.title %>">
            <div class="card-body">
              <h5 class="card-title">
                <%= campground.title %>
              </h5>
              <p class="card-text">
                <%= campground.description %>
              </p>
            </div>
            <ul class="list-group list-group-flush">
              <li class="list-group-item text-muted">
                <%= campground.location %>
              </li>
              <li class="list-group-item">$<%= campground.price %>/night</li>
            </ul>
            <div class="card-body text-center">
                <form class="d-inline" action="/campgrounds/<%= campground._id %>?_method=DELETE" class="d-inline" method="POST">
                  <button class="btn btn-danger">Delete</button>
                </form>
                <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">Cancel</a>
            </div>
          </div>
        </div>
      </div>